<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.lee.vshare.util.StringUtils" />

        <variable
            name="chatInfo"
            type="com.lee.vshare.model.ex.ChatInfo" />

        <variable
            name="listener"
            type="com.lee.vshare.listener.ItemClickListener" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/safe_spacing"
        android:layout_marginTop="@dimen/safe_spacing"
        android:layout_marginEnd="@dimen/safe_spacing">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:onClick="@{()->listener.onItemClick(chatInfo)}">

            <ImageView
                android:id="@+id/chatInfo_cover"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="w,1:1"
                app:srcCompat="@drawable/icon" />

            <TextView
                android:layout_marginStart="@dimen/dp_16"
                android:id="@+id/chatInfo_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="2"
                android:text="@{String.valueOf(chatInfo.Time)}"
                android:textColor="@color/blackTitle"
                android:textSize="@dimen/item_title"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/chatInfo_cover" />

            <TextView
                android:layout_marginStart="@dimen/dp_16"
                android:id="@+id/chatInfo_describe"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="2"
                android:text="@{chatInfo.Content}"
                android:textSize="@dimen/item_describe"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/chatInfo_cover"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</layout>
